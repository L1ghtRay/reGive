<link rel="stylesheet" href="css/style.css">
<script src="js/script.js"></script>

<nav>
    <div id="logo"><img src="img/logo.png" width="100" /></div>
    <form id="searchForm" action="/api/search"  method="get">
        <input 
            type="text" 
            name="q" 
            placeholder="Search items..." 
            style="padding: 8px; border-radius: 5px; border: 1px solid teal; width: 500px;"
        />
    </form>
    <div id="links">
        <a href="/">Home</a>
        <a href="/category">Donate</a>
        <a href="/catalog">Catalog</a>  

        <% if (user) { %>
            <div id="profile-dropdown" class="profile-container">
                <button id="profile-btn" class="profile-button">
                    <span class="welcome-text">Welcome <%= user.displayName || user.given_name %>!</span>
                    <span class="dropdown-arrow">â–¼</span>
                </button>
                <div class="dropdown-menu">
                    <a href="/user-profile" class="dropdown-item">Profile</a>
                    <a href="/mylist" class="dropdown-item">My List</a>
                    <a href="/help" class="dropdown-item">Help</a>
                    <a href="/logout" class="dropdown-item logout" id="logout-btn">Logout</a>
                </div>
            </div>
        <% } else { %>
            <a href="/auth/google" id="login">Login</a>
        <% } %>
    </div>
</nav>
