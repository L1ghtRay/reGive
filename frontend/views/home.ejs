<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage | reGive</title>
    <link rel="stylesheet" href="css/style.css" />
    <script src="js/script.js" defer></script>
</head>

<body>
    <%- include('partials/navbar') %>

    <section id="donate">
        <span>Donate to those who Need</span>
        <button id="donate-btn">Donate</button>
    </section>
    </section>
    <section id="leaderboard" class="leaderboard-section">
        <h2>Top Donors</h2>
        <ul id="leaderboardList"></ul>
    </section>

    <section id="small-catalog">
        <span>Frequently Donated Items</span>
        <div id="listings">
            <ul id="list">
                <% // Check if items were passed from the backend, defaulting to empty array const
                    displayItems=typeof frequentItems !=='undefined' ? frequentItems : []; %>

                <% displayItems.forEach(item=> { %>
                    <a href="/api/search?q=<%= item.name %>" class="item">
                        <img src="<%= item.imageURL && item.imageURL.length > 0 ? item.imageURL[0] : '/img/stock-item.jpg' %>"
                            alt="<%= item.name %> image"
                            onerror="this.onerror=null; this.src='/img/stock-item.jpg';" />

                        <span class="item-name">
                            <%= item.name %>
                        </span>
                        <span class="item-desc">
                            <%= item.description %>
                        </span>
                    </a>
                <% }); %>

                <% if (displayItems.length === 0) { %>
                    <p>No frequently donated items found yet. Please check back later!</p>
                <% } %>
            </ul>
        </div>
    </section>

    <%- include('partials/footer') %>

</body>

</html>